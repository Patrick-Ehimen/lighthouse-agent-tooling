# Lighthouse MCP Server Environment Configuration
# Copy this file to .env and configure your settings

# ===========================
# Server Configuration
# ===========================

# Server name (default: lighthouse-storage)
SERVER_NAME=lighthouse-storage

# Server version (default: 0.1.0)
SERVER_VERSION=0.1.0

# ===========================
# Logging Configuration
# ===========================

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Enable file logging (default: false)
LOG_TO_FILE=false

# Log file path (only used if LOG_TO_FILE=true)
LOG_FILE_PATH=./logs/mcp-server.log

# ===========================
# Storage Configuration
# ===========================

# Maximum storage size in bytes (default: 1073741824 = 1GB)
MAX_STORAGE_SIZE=1073741824

# ===========================
# Performance & Monitoring
# ===========================

# Enable metrics collection (default: true)
ENABLE_METRICS=true

# Metrics collection interval in milliseconds (default: 60000 = 1 minute)
METRICS_INTERVAL=60000

# ===========================
# Future SDK Integration
# ===========================

# Lighthouse API Key (for production use with real SDK)
# LIGHTHOUSE_API_KEY=your_api_key_here

# Kavach encryption endpoint
# KAVACH_ENDPOINT=https://encryption.lighthouse.storage

# Enable real Lighthouse SDK (default: false, uses mocks)
# USE_REAL_SDK=false
