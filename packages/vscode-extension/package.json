{
  "name": "lighthouse-vscode-extension",
  "displayName": "Lighthouse Storage for VSCode",
  "description": "AI-native Lighthouse storage integration for VSCode with MCP support",
  "version": "0.1.0",
  "publisher": "lighthouse-web3",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Data Science"
  ],
  "keywords": [
    "lighthouse",
    "ipfs",
    "storage",
    "ai",
    "vscode",
    "mcp",
    "encryption",
    "datasets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lighthouse.vscode.uploadFile",
        "title": "Upload File to Lighthouse",
        "category": "Lighthouse",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "lighthouse.vscode.createDataset",
        "title": "Create AI Dataset",
        "category": "Lighthouse",
        "icon": "$(database)"
      },
      {
        "command": "lighthouse.vscode.connectMCP",
        "title": "Connect to MCP Server",
        "category": "Lighthouse",
        "icon": "$(plug)"
      },
      {
        "command": "lighthouse.vscode.refreshTree",
        "title": "Refresh",
        "category": "Lighthouse",
        "icon": "$(refresh)"
      },
      {
        "command": "lighthouse.vscode.openFile",
        "title": "Open File",
        "category": "Lighthouse"
      },
      {
        "command": "lighthouse.vscode.openDataset",
        "title": "Open Dataset",
        "category": "Lighthouse"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "lighthouseFiles",
          "name": "Lighthouse Storage",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "lighthouse.vscode.refreshTree",
          "when": "view == lighthouseFiles",
          "group": "navigation"
        },
        {
          "command": "lighthouse.vscode.uploadFile",
          "when": "view == lighthouseFiles",
          "group": "navigation"
        },
        {
          "command": "lighthouse.vscode.createDataset",
          "when": "view == lighthouseFiles",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "lighthouse.vscode.uploadFile",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "lighthouse.vscode.createDataset",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "lighthouse.vscode.connectMCP",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "lighthouse.vscode.refreshTree",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "configuration": {
      "title": "Lighthouse",
      "properties": {
        "lighthouse.vscode.mcpServerUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "MCP Server URL for AI agent communication"
        },
        "lighthouse.vscode.apiKey": {
          "type": "string",
          "description": "Lighthouse API key for authentication"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "dev": "tsc -watch -p ./",
    "package": "vsce package",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:vscode": "npm run compile && node ./out/test/runTest.js",
    "clean": "rm -rf dist out"
  },
  "dependencies": {
    "@lighthouse-tooling/shared": "workspace:*",
    "@lighthouse-tooling/sdk-wrapper": "workspace:*",
    "@lighthouse-tooling/types": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.5"
  }
}
